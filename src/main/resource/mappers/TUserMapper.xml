<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.ddhj.mapper.TUserMapper">
	<resultMap id="BaseResultMap" type="cn.com.ddhj.model.TUser">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="uuid" property="uuid" jdbcType="VARCHAR" />
		<result column="user_code" property="userCode" jdbcType="VARCHAR" />
		<result column="phone" property="phone" jdbcType="VARCHAR" />
		<result column="password" property="password" jdbcType="VARCHAR" />
		<result column="nick_name" property="nickName" jdbcType="VARCHAR" />
		<result column="head_pic" property="headPic" jdbcType="VARCHAR" />
		<result column="e_mail" property="eMail" jdbcType="VARCHAR" />
		<result column="is_login" property="isLogin" jdbcType="INTEGER" />
		<result column="create_user" property="createUser" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="VARCHAR" />
		<result column="update_user" property="updateUser" jdbcType="VARCHAR" />
		<result column="update_time" property="updateTime" jdbcType="VARCHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		id, uuid, user_code, phone, password, nick_name, head_pic,
		e_mail,
		is_login, create_user,
		DATE_FORMAT(
		create_time,
		'%Y-%m-%d'
		) AS
		create_time,
		update_user,
		DATE_FORMAT(
		update_time,
		'%Y-%m-%d'
		) AS
		update_time
	</sql>
	<select id="selectByPrimaryKey" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from t_user
		where user_code = #{userCode,jdbcType=VARCHAR}
	</select>
	<delete id="deleteByCode" parameterType="java.lang.String">
		delete from t_user
		where
		user_code = #{userCode,jdbcType=VARCHAR}
	</delete>
	<insert id="insertSelective" parameterType="cn.com.ddhj.model.TUser">
		insert into t_user
		<trim prefix="(" suffix=")" suffixOverrides=",">
			uuid,
			user_code,
			phone,
			password,
			<if test="nickName != null">
				nick_name,
			</if>
			<if test="headPic != null">
				head_pic,
			</if>
			<if test="eMail != null">
				e_mail,
			</if>
			<if test="isLogin != null">
				is_login,
			</if>
			create_user,
			create_time,
			update_user,
			update_time
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			#{uuid,jdbcType=VARCHAR},
			#{userCode,jdbcType=VARCHAR},
			#{phone,jdbcType=VARCHAR},
			#{password,jdbcType=VARCHAR},
			<if test="nickName != null">
				#{nickName,jdbcType=VARCHAR},
			</if>
			<if test="headPic != null">
				#{headPic,jdbcType=VARCHAR},
			</if>
			<if test="eMail != null">
				#{eMail,jdbcType=VARCHAR},
			</if>
			<if test="isLogin != null">
				#{isLogin,jdbcType=INTEGER},
			</if>
			#{createUser,jdbcType=VARCHAR},
			STR_TO_DATE(
			#{createTime,jdbcType=VARCHAR},'%Y-%m-%d %H:%i:%s'),
			#{updateUser,jdbcType=VARCHAR},
			STR_TO_DATE(
			#{updateTime,jdbcType=VARCHAR},'%Y-%m-%d %H:%i:%s')
		</trim>
	</insert>
	<update id="updateByCode" parameterType="cn.com.ddhj.model.TUser">
		update t_user
		<set>
			<if test="password != null">
				password = #{password,jdbcType=VARCHAR},
			</if>
			<if test="nickName != null">
				nick_name = #{nickName,jdbcType=VARCHAR},
			</if>
			<if test="headPic != null">
				head_pic = #{headPic,jdbcType=VARCHAR},
			</if>
			<if test="eMail != null">
				e_mail = #{eMail,jdbcType=VARCHAR},
			</if>
			<if test="isLogin != null">
				is_login = #{isLogin,jdbcType=INTEGER},
			</if>
			update_user = #{updateUser,jdbcType=VARCHAR},
			update_time =
			STR_TO_DATE(#{updateTime,jdbcType=VARCHAR},'%Y-%m-%d %H:%i:%s'))
		</set>
		where user_code = #{userCode,jdbcType=VARCHAR}
	</update>
	<!-- 登录验证用户 -->
	<select id="findTUser" parameterType="cn.com.ddhj.dto.TUserDto"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from t_user
		where phone = #{phone,jdbcType=VARCHAR}
		and `password` =
		#{password,jdbcType=VARCHAR}
	</select>
	<!-- 登录验证用户 -->
	<select id="findTUserByUuid" parameterType="java.lang.String"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from t_user
		where uuid=#{uuid,jdbcType=VARCHAR}
	</select>
	<!-- 用户登录和登出公共接口 -->
	<update id="userLoginAndLogOut" parameterType="cn.com.ddhj.model.TUser">
		update t_user
		<set>
			is_login = #{isLogin,jdbcType=INTEGER}
		</set>
		<where>
			uuid = #{uuid,jdbcType=VARCHAR}
		</where>
	</update>
</mapper>